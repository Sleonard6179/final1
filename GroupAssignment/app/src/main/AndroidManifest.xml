<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ourgroupisawesome.groupassignment" >

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".CheckUserActivity"
            android:label="@string/title_activity_check_user" >
        </activity>
        <activity
            android:name=".FoundYou"
            android:label="@string/title_activity_found_you" >
        </activity>
        <activity
            android:name=".Checkuser"
            android:label="@string/title_activity_checkuser" >
        </activity>
        <activity
            android:name=".CheckCheckUserActivity"
            android:label="@string/title_activity_check_check_user" >
        </activity>
    </application>

</manifest>
